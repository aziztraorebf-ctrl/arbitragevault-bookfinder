# Application Environment
APP_ENV=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+psycopg://memex:memex@localhost:5432/memex

# JWT Configuration (Generate secure values for production)
JWT_SECRET=replace_me_with_secure_random_32_chars_minimum_for_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=20
REFRESH_TOKEN_EXPIRE_DAYS=14

# Password Security
PEPPER=replace_me_with_random_pepper_for_additional_security
PASSWORD_HASH_SCHEME=argon2
PASSWORD_MIN_LENGTH=8

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting (per IP address)
RATE_LIMIT_LOGIN_PER_15_MIN=5
RATE_LIMIT_REGISTER_PER_HOUR=3

# Security Headers
TRUSTED_HOSTS=localhost,127.0.0.1

# Development Settings (set to false in production)
ENABLE_DOCS=true
ENABLE_REDOC=true

# External APIs (to be added in Phase 2)
# KEEPA_API_KEY=your_keepa_api_key
# OPENAI_API_KEY=your_openai_api_key
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret