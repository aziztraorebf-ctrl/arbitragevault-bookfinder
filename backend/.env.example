# ArbitrageVault Backend - Environment Configuration

# Application Environment
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration (Local Development)
# For production, use Neon PostgreSQL connection string
DATABASE_URL=postgresql://localhost:5432/arbitragevault_dev

# Production Database (Example - Neon PostgreSQL)
# DATABASE_URL=postgresql://user:password@ep-xxx.pooler.c-2.us-east-1.aws.neon.tech/neondb?sslmode=require

# External APIs
KEEPA_API_KEY=your_keepa_api_key
OPENAI_API_KEY=your_openai_api_key

# CORS Configuration for Frontend
CORS_ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:5173"]

# Application Settings
ENVIRONMENT=development
SECRET_KEY=your_secret_key_here

# Optional Monitoring
SENTRY_DSN=your_sentry_dsn

# Development Features
ENABLE_DOCS=true
ENABLE_REDOC=true

# Authentication (Future Integration)
# JWT_SECRET=replace_with_secure_secret
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Production Settings (Override in production)
# LOG_LEVEL=WARNING
# ENABLE_DOCS=false
# ENVIRONMENT=production