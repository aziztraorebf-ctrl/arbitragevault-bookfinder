{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.12"
  },
  "steps": {
    "install": {
      "commands": ["cd backend && uv sync --no-dev --frozen"]
    }
  },
  "deploy": {
    "startCommand": "cd backend && uv run uvicorn app.main:app --host 0.0.0.0 --port $PORT",
    "variables": {
      "RAILPACK_PYTHON_PACKAGE_MANAGER": "uv"
    }
  }
}